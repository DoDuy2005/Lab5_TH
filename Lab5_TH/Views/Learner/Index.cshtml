@model IEnumerable<Lab5_TH.Models.Learner>

@{
    ViewData["Title"] = "Learner Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-6">
                    <i class="fas fa-users text-primary me-2"></i>Learner Management
                </h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Create New
                </a>
            </div>

            <!-- Filter Section -->
            <div class="row">
                <div class="col-md-3">
                    <!-- ViewComponent sẽ render ở đây -->
                    @await Component.InvokeAsync("Major")
                    
                    <!-- Loading Spinner -->
                    <div id="loadingSpinner" class="text-center mt-3" style="display: none;">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Loading learners...</p>
                    </div>
                </div>
                
                <div class="col-md-9">
                    <!-- Results Section -->
                    <div class="card">
                        <div class="card-header bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-list me-1"></i>Learner List
                                </h5>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-secondary me-2" id="resultCount">
                                        @Model.Count() learners
                                    </span>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="autoRefresh" checked>
                                        <label class="form-check-label small" for="autoRefresh">
                                            Auto Refresh
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div id="learnerTableContainer">
                                <!-- Nội dung bảng sẽ được load bằng AJAX -->
                                @await Html.PartialAsync("_LearnerTable", Model)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function filterByMajor(majorId) {
            $('#loadingSpinner').show();
            $('#learnerTableContainer').hide();
            
            $('.list-group-item').removeClass('active');
            if (majorId === 0) {
                $('.list-group-item:first').addClass('active');
            } else {
                $('#major-' + majorId).addClass('active');
            }
            
            let url = '';
            if (majorId === 0) {
                url = '@Url.Action("AllLearners", "Learner")';
            } else {
                url = '@Url.Action("LearnerByMajorID", "Learner")' + '?mid=' + majorId;
            }
            $.ajax({
                url: url,
                type: 'GET',
                success: function (data) {
                    $('#learnerTableContainer').html(data);
                    updateResultCount();
                },
                error: function (xhr, status, error) {
                    console.error('Error loading learners:', error);
                    $('#learnerTableContainer').html(
                        '<div class="alert alert-danger m-3">Error loading learners. Please try again.</div>'
                    );
                },
                complete: function () {
                    $('#loadingSpinner').hide();
                    $('#learnerTableContainer').show();
                }
            });
        }
        function updateResultCount() {
            const rowCount = $('#learnerTableContainer tbody tr').length;
            $('#resultCount').text(rowCount + ' learners');
        }

        function setupAutoRefresh() {
            if ($('#autoRefresh').is(':checked')) {
                console.log('Auto refresh enabled');
            }
        }
        
        $(document).ready(function () {
            $('#autoRefresh').change(function () {
                setupAutoRefresh();
            });

            $('[title]').tooltip();
            
            $('.list-group-item').click(function (e) {
                e.preventDefault();
            });
        });
        $(document).on('submit', 'form', function (e) {
            const form = $(this);
            if (form.attr('data-ajax') === 'true') {
                e.preventDefault();
            }
        });
    </script>
    }
    
