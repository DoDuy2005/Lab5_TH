@model IEnumerable<Lab5_TH.Models.Learner>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Enrollment Date</th>
                    <th>Major</th>
                    <th>Enrollments</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.LearnerID)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.FirstMidName)</td>
                        <td>@item.EnrollmentDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.Major.MajorName)</span>
                        </td>
                        <td>
                            @if (item.Enrollments.Any())
                            {
                                <div class="enrollment-list">
                                    @foreach (var enrollment in item.Enrollments.Take(3))
                                    {
                                        <small class="d-block">
                                            @enrollment.Course.Title:
                                            <span class="badge @(enrollment.Grade >= 5 ? "bg-success" : "bg-warning")">
                                                @enrollment.Grade
                                            </span>
                                        </small>
                                    }
                                    @if (item.Enrollments.Count > 3)
                                    {
                                        <small class="text-muted">+@(item.Enrollments.Count - 3) more</small>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">No enrollments</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.LearnerID"
                                   class="btn btn-outline-warning" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.LearnerID"
                                   class="btn btn-outline-info" title="Details">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.LearnerID"
                                   class="btn btn-outline-danger" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="alert alert-info mt-3">
        <strong>@Model.Count()</strong> learners found
    </div>
}
else
{
    <div class="alert alert-warning">
        <h5>No learners found</h5>
        <p>No learners match the current filter criteria.</p>
        <a href="#" onclick="filterByMajor(0)" class="btn btn-primary btn-sm">Show All Learners</a>
    </div>
}